<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
           xsi:schemaLocation="http://www.osgi.org/xmlns/blueprint/v1.0.0
           http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd">

  <bean id="contentAccessFactory" class="org.pentaho.ctools.cpf.repository.factory.ContentAccessFactory"/>

  <reference-list interface="pt.webdetails.cpf.repository.api.IReadAccess" availability="optional" >
    <reference-listener ref="contentAccessFactory" bind-method="addReadAccess" unbind-method="removeReadAccess"/>
  </reference-list>

  <reference interface="pt.webdetails.cpf.repository.api.IRWAccess" availability="optional">
    <reference-listener ref="contentAccessFactory" bind-method="setReadWriteAccess" unbind-method="removeReadWriteAccess"/>
  </reference>

  <service interface="pt.webdetails.cpf.api.IContentAccessFactoryExtended" ref="contentAccessFactory"/>

</blueprint>
